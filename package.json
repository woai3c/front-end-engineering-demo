{
  "name": "front-end-engineering-demo",
  "version": "0.0.1",
  "description": "前端工程化 demo",
  "scripts": {
    "test": "jest --coverage test/",
    "lint": "eslint --ext .js,.ts,.tsx test/ src/",
    "lint:html": "htmlhint **/*.html",
    "start": "node server.js",
    "cypress": "cypress open"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "FORCE_COLOR=1 node script/verify-commit.js",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": "eslint",
    "test/**/*.{js,jsx,ts,tsx}": "eslint",
    "*.css": "stylelint",
    "*.html": "htmlhint"
  },
  "license": "MIT",
  "author": "谭光志",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/woai3c/front-end-engineering-demo.git"
  },
  "bugs": {
    "url": "https://github.com/woai3c/front-end-engineering-demo/issues"
  },
  "homepage": "https://github.com/woai3c/front-end-engineering-demo#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "babel-eslint": "^10.1.0",
    "chalk": "^4.1.0",
    "cypress": "^6.0.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.0",
    "htmlhint": "^0.14.2",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.5.4",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}
